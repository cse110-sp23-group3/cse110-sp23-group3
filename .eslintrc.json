{
  "extends": ["standard", "prettier"],
  "plugins": ["prettier", "jest"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ]
  },
  "env": {
    "node": true,
    "browser": true,
    "jest": true
  },
  "globals": {
    "page": "readonly",
    "browser": "readonly",
    "context": "readonly",
    "jestPuppeteer": "readonly",
    "describe": "readonly",
    "it": "readonly",
    "expect": "readonly"
  }
}
